<div class="container-fluid" data-behavior="account_register_view">
  <div class="row">
    <div class="col-xs-12 col-sm-4 col-sm-offset-4">
      <h1><%= t(".page_title") %></h1>
      <%= simple_form_for(account, url: url_for(action: :create, only_path: true), as: :account) do |f| %>
          <%= render("form", f: f) %>
          <div class="form-group">
            <%= f.label(:password, class: "sr-only", required: true) %>
            <%= f.password_field :password, placeholder: "Password", class: "form-control" %>
            <%= f.error :password, data: { behavior: :password_field_error } %>
          </div>
          <div>
            <footer class="container-fluid">
              <div class="row">
                <%= f.submit value: t(".register"), class: "btn btn-primary btn-block col-xs-12", data: { behavior: "register_button" } %>
              </div>
              <div class="row">
                <p class="col-xs-12">
                  <%= t(".already_have_account") %>
                  <%= link_to t(".login"), login_account_path %>
                </p>
              </div>
              <%= link_to t(".forgotten_password"), reset_password_request_account_path, class: "btn btn-sm btn-info" %>
            </footer>
          </div>
      <% end %>
    </div>
  </div>
</div>
