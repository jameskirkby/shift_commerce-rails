<div class="container-fluid" data-behavior="account_edit_view">
  <div class="row">
    <div class="col-xs-12 col-sm-4 col-sm-offset-4">
      <h1><%= t(".page_title") %></h1>
      <%= simple_form_for(account, url: url_for(action: :update, only_path: true), as: :account) do |f| %>
          <div class="form-group">
            <%= f.label(:email, required: false) %>
            <%= f.email_field :email, placeholder: "Email", autocapitalize: "off", spellcheck: "false", class: "form-control" %>
            <%= f.error :email, data: { behavior: :email_field_error } %>
          </div>
          <div class="form-group">
            <%= f.label(:twitter_username, required: false) %>

            <%= f.email_field 'meta_attributes[twitter_username][value]', id: :twitter_username,
                              placeholder: "Twitter", class: "form-control", 
                              value: account.meta_attribute(:twitter_username) %>

            <%= f.error :twitter_username, data: { behavior: :twitter_username_field_error } %>
          </div>
          <footer>
            <%= f.submit value: t(".save"), class: "btn btn-primary btn-block", data: { behavior: "save_button" } %>
          </footer>
      <% end %>
    </div>
  </div>
</div>
