<h1>Order History</h1>
<div data-behavior="account_addresses_index_view" class="container-fluid">
  <div class="row">
    <div class="col-xs-12 table-responsive">
      <table class="table table-striped table-bordered">
        <thead>
        <tr>
          <th>Reference</th>
          <th>Date</th>
          <th>Total</th>
          <th>Status</th>
          <th>Action</th>
        </tr>
        </thead>
        <tbody>
          <% orders.each do |order|  %>
            <tr>
              <td><%= link_to(order.reference, order_path(order)) %></td>
              <td><%= order.date %></td>
              <td><%= number_to_currency(order.total) %></td>
              <td><%= order.status %></td>
              <td>
                <%= link_to t(".show_button"), order_path(order), class: "btn-xs btn-primary" %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
