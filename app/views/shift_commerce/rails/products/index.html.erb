<div data-behavior="search_results_view" class="container-fluid products_list">

  <div class="row">
    <div class="col-xs-12">
      <h1><%= page_title %></h1>
    </div>
  </div>

  <div class="row">
    <% if products && products.meta && products.meta.attributes["facets"].size > 0 %>
      <div class="col-xs-2 facets">
        <%= render partial: "shift_commerce/rails/shared/facets_search_form", locals: { products: products } %>
      </div>
    <% end %>

      <div class="col-xs-10">

          <div class="row">
            <div data-behavior="results" class="col-xs-12 col-sm-8 col-md-9">
              <% if products.empty? %>
                  <p><%= t("products.search.empty") %></p>
              <% end %>

              <%= render partial: "shift_commerce/rails/shared/product_list", locals: { products: products } %>
            </div>
          </div> <!-- row -->
      </div>
    </div>
</div>
