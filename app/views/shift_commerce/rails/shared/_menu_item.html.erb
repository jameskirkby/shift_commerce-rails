<% if menu_item.menu_items.empty? %>
    <li data-behavior="category_navigation_item">
      <%= link_to menu_item.title, url_for_menu_item(menu_item) %>
    </li>
<% else %>
    <li class="dropdown">
      <!-- @TODO Decide if link_to would read better -->
      <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false"><%= menu_item.title %><span class="caret"></span></a>
      <ul class="dropdown-menu">
        <%= render partial: "shift_commerce/rails/shared/menu_item", collection: menu_item.menu_items %>
      </ul>
    </li>
<% end %>
