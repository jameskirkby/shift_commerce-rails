<%= render "shift_commerce/rails/shared/common_address_fields", f: f, countries: countries %>
<div class="form-group">
  <%= f.label(:preferred_billing, required: true) %>
  <%= f.check_box :preferred_billing, autocapitalize: "off", required: true, spellcheck: "false", class: "form-control", size: "30" %>
  <%= f.error :preferred_billing, data: { behavior: :preferred_billing_field_error } %>
</div>
<div class="form-group">
  <%= f.label(:preferred_shipping, required: true) %>
  <%= f.check_box :preferred_shipping, autocapitalize: "off", required: true, spellcheck: "false", class: "form-control", size: "30" %>
  <%= f.error :preferred_shipping, data: { behavior: :preferred_shipping_field_error } %>
</div>
<footer class="container-fluid">
  <div class="row">
    <%= f.submit value: t(".save"), class: "btn btn-primary col-xs-12", data: { behavior: "save_button" } %>
  </div>
</footer>
