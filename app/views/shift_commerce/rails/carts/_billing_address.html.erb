<div data-behavior="address">
  <h4>Billing Address</h4>
  <% if current_account.present? %>
      <div class="form-group">
        <%= f.label(:billing_address_id, required: true) %>
        <%= f.select :billing_address_id, current_account.addresses.collect { |addrress| ["#{addrress.first_name} #{addrress.middle_names} #{addrress.last_name} #{addrress.address_line_1} #{addrress.postcode}", addrress.id ] }, { include_blank: t(".choose_billing_address") }, class: "form-control", data: { action: "select_saved_address", scope: "checkout_billing_address" } %>
        <%= f.error :billing_address_id, data: { behavior: :billing_address_id_field_error } %>
      </div>
      <div class="form-group" data-action="allow_edit_billing_address">
        <%= f.label(:allow_edit_billing_address) %>
        <%= f.check_box :allow_edit_billing_address %>
        <%= f.error :allow_edit_billing_address, data: { behavior: :allow_edit_billing_address_field_error } %>
      </div>
  <% end %>
  <%= f.fields_for :billing_address, billing_address do |f| %>
      <%= render "shift_commerce/rails/shared/common_address_fields", f: f, countries: billing_countries %>
  <% end %>
</div>
